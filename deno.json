{
  "tasks": {
    "build": "deno run --allow-env --allow-read --allow-write --allow-run build.ts",
    "zip": "deno run build --minify; zip -vr dist.zip dist -x \"*.DS_Store\"",
    "build:prod": "deno run --allow-env --allow-read --allow-write --allow-run build.ts --minify",
    "format": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {},
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true
  }
}
